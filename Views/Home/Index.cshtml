@model Todo


<div class="row">
    <div class="col-md-8 offset-2">
        @foreach(var todo in ViewBag.todos)
        {
        <div class="card">
            <div class="card-body">
                <h6 class="card-category">@todo.title</h6>
                <div class="card-icon">
                <i class="nc-icon nc-spaceship"></i>
                </div>
                <p class="card-description">@todo.description <br> @todo.due_date</p>
                <div class="card-footer">
                <a href="#pablo" class="btn btn-warning btn-round card-link">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit
                </a>
                <a href="#pablo" class="btn btn-danger btn-round card-link">
                    <i class="fa fa-remove" aria-hidden="true"></i> Delete
                </a>
                </div>
            </div>
        </div>
        }
    </div>
</div>
